<h1>Edit Discount - ID: <%= @discount.id %></h1>

<%= form_for @discount, url: dashboard_discount_path(@discount) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :discount %>
    <%= f.number_field :discount %>
  </p>

  <p>
    <%= f.label :threshold %>
    <%= f.number_field :threshold %>
  </p>
  <p>
    <%= f.submit "Save Changes" %>
  </p>
<% end %>
